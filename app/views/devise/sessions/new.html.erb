<% provide :title, t('.title') %>

<%= render 'shared/logo' %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="small-12 medium-6 medium-offset-3 large-6 large-offset-3 columns">
      <div class="panel">
        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-mail"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <%= f.email_field :email, placeholder: t('.email_field_placeholder'), autofocus: true %>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-lock"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <%= f.password_field :password, placeholder: t('.password_field_placeholder'), autocomplete: "off" %>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-10 small-offset-2 medium-10 medium-offset-2 large-11 large-offset-1 columns">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-12 medium-12 large-12 columns">
            <%= f.submit t('.submit'), class: "button expand" %>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-12 medium-12 large-12 columns text-center">
            <%= link_to t('.new_password_path_link'), new_password_path(resource_name) %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>