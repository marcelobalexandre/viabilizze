<% provide :title, "Redefinir Senha" %>

<%= render 'shared/logo' %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row">
    <div class="small-12 medium-6 medium-offset-3 large-6 large-offset-3 columns">
      <div class="panel">
        <div class="row collapse">
          <div class="small-12 medium-12 large-12 columns text-center">
            <h4>Altere sua senha</h4>
          </div>
        </div>

        <%= f.hidden_field :reset_password_token %>

        <% if resource.errors[:reset_password_token].any?  %>
          <div class="row collapse">
            <div class="small-12 medium-12 large-12 columns text-center">
              <div data-alert class="alert-box alert">
                <%= resource.errors.full_messages_for(:reset_password_token).first %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-lock"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <div class="<%= "error" if resource.errors[:password].any? %>">
              <%= f.password_field :password, placeholder: "Nova senha", autofocus: true, autocomplete: "off" %>

              <% if resource.errors[:password].any? %>
                <small class="error"><%= resource.errors.full_messages_for(:password).first %></small>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-lock"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <div class="<%= "error" if resource.errors[:password_confirmation].any? %>">
              <%= f.password_field :password_confirmation, placeholder: "ConfirmaÃ§Ã£o de nova senha", autocomplete: "off" %>

              <% if resource.errors[:password_confirmation].any? %>
                <small class="error"><%= resource.errors.full_messages_for(:password_confirmation).first %></small>
              <% end %>
            </div>
          </div>
        </div>
  
        <div class="row collapse">
          <div class="small-12 medium-12 large-12 columns">
            <%= f.submit "Redefinir Senha", class: "button expand" %>
          </div>
        </div>        
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>