<% provide :title, "Criar Conta" %>

<%= render 'shared/logo' %>

<div class="row">
  <div class="hide-for-small-only medium-12 large-12 columns text-center">
    <h2 class="signup">Crie sua conta de graça</h3>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="row">
    <div class="small-12 medium-6 medium-offset-3 large-6 large-offset-3 columns">
      <div class="panel">
        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-torso"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <div class="<%= "error" if resource.errors[:name].any? %>">
              <%= f.text_field :name, placeholder: "Nome", autofocus: true %>

              <% if resource.errors[:name].any? %>
                <small class="error"><%= resource.errors.full_messages_for(:name).first %></small>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-mail"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <div class="<%= "error" if resource.errors[:email].any? %>">
              <%= f.email_field :email, placeholder: "E-mail" %>

              <% if resource.errors[:email].any? %>
                <small class="error"><%= resource.errors.full_messages_for(:email).first %></small>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-lock"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <div class="<%= "error" if resource.errors[:password].any? %>">
              <%= f.password_field :password, placeholder: "Senha", autocomplete: "off" %>

              <% if resource.errors[:password].any? %>
                <small class="error"><%= resource.errors.full_messages_for(:password).first %></small>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-lock"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <div class="<%= "error" if resource.errors[:password_confirmation].any? %>">
              <%= f.password_field :password_confirmation, placeholder: "Confirmação de senha", autocomplete: "off" %>

              <% if resource.errors[:password_confirmation].any? %>
                <small class="error"><%= resource.errors.full_messages_for(:password_confirmation).first %></small>
              <% end %>
            </div>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-12 medium-12 large-12 columns">
            <%= f.submit "Criar Conta", class: "button expand" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="row">
  <div class="small-10 small-offset-1 medium-4 medium-offset-4 large-4 large-offset-4 text-center">
    <p class="create-user-agreement">
      <small>
        Ao criar uma conta você concorda com nossos
        <%= link_to "Termos de Uso", "#" %> 
        e nossa 
        <%= link_to "Política de Privacidade", "#" %>
      </small>
    </p>
  </div>
</div>
