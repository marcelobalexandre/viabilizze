<% provide :title, t('.title') %>

<%= render 'shared/logo' %>

<div class="row">
  <div class="hide-for-small-only medium-12 large-12 columns text-center">
    <h2 class="signup-text"><%= t('.form_title') %></h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), validate: true) do |f| %>
  <div class="row">
    <div class="small-12 medium-6 medium-offset-3 large-6 large-offset-3 columns">
      <div class="panel">
        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-torso"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <%= f.text_field :name, placeholder: t('.name_field_placeholder'), autofocus: true %>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-mail"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <%= f.email_field :email, placeholder: t('.email_field_placeholder') %>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-lock"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <%= f.password_field :password, placeholder: t('.password_field_placeholder'), autocomplete: "off" %>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-2 medium-2 large-1 columns">
            <span class="prefix field-icon fi-lock"></span>
          </div>
          <div class="small-10 medium-10 large-11 columns">
            <%= f.password_field :password_confirmation, placeholder: t('.password_confirmation_field_placeholder'), autocomplete: "off" %>
          </div>
        </div>

        <div class="row collapse">
          <div class="small-12 medium-12 large-12 columns">
            <%= f.submit t('.submit'), class: "button expand" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="row">
  <div class="small-10 small-offset-1 medium-4 medium-offset-4 large-4 large-offset-4 text-center">
    <p class="create-user-agreement">
      <small>
        <%= t('.terms_first_line') %>
        <%= link_to t('.terms_of_use_link'), "#" %>
        <%= t('.terms_second_line') %>
        <%= link_to t('.privacy_policy_link'), "#" %>
      </small>
    </p>
  </div>
</div>
