<% provide :title, t('.title', project_name: current_project.name) %>

<% if @sensitivity_analyses.count > 0 %>
  <div class="row">
    <div class="small-12 medium-8 medium-offset-2 large-8 large-offset-2 columns">
      <div class="panel form-panel">
        <div class="row collapse">
          <div class="small-12 medium-12 large-12 columns text-center">
            <h4><strong><%= t('.title', project_name: current_project.name) %></strong></h4>
          </div>
        </div>

        <%= render @sensitivity_analyses %>

        <div class="row collapse">
          <div class="small-12 medium-12 large-12 columns">
            <%= will_paginate @sensitivity_analyses, renderer: FoundationPagination::Rails %>
          </div>
        </div>
      </div>
    </div>
<% else %>
  <div class="row">
    <div class="small-12 medium-6 medium-offset-3 large-6 large-offset-3 columns text-center">
      <h3 class="empty-projects-text"><%= t('.empty_sensitivity_analyses') %></h3>
    </div>
  </div>

  <div class="row">
    <div class="small-12 medium-4 medium-offset-4 large-4 large-offset-4 columns text-center">
      <%= link_to(new_user_project_sensitivity_analysis_path(current_user, current_project), class: 'button expand') do %>
        <%= icon 'plus' %>
        <%= t('.new_sensitivity_analysis_button') %>
      <% end %>
    </div>
  </div>
<% end %>
