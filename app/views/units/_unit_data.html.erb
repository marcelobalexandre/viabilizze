<div class="row collapse">
  <div class="small-12 medium-12 large-12 columns">
    <div class="unit-name">
      <%= unit.name %>
    </div>
  </div>
</div>

<div class="row collapse">
  <div class="small-12 medium-12 large-12 columns">
    <div class="unit-information">
      Área Privativa: <%= number_with_precision(unit.private_area, precision: 2, separator: '.') %> m²
    </div>
  </div>
</div>

<div class="row collapse">
  <div class="small-12 medium-12 large-12 columns">
    <div class="unit-information">
      Área Comum: <%= number_with_precision(unit.common_area, precision: 2, separator: '.') %> m²
    </div>
  </div>
</div>

<div class="row collapse">
  <div class="small-12 medium-12 large-12 columns">
    <div class="unit-information">
      Área de Box: <%= number_with_precision(unit.box_area, precision: 2, separator: '.') %> m²
    </div>
  </div>
</div>

<div class="row collapse">
  <div class="small-12 medium-12 large-12 columns">
    <div class="unit-information">
      Área Total: <%= number_with_precision(unit.total_area, precision: 2, separator: '.') %> m²
    </div>
  </div>
</div>

<div class="row collapse">
  <div class="small-12 medium-12 large-12 columns">
    <%= check_box_tag :exchanged, 1, unit.exchanged, disabled: true %>
    <%= label_tag :exchanged, "Unidade Permutada" %>
  </div>
</div>
