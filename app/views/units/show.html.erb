<% provide :title, @unit.name %>

<div class="row">
  <div class="small-12 medium-8 medium-offset-2 large-8 large-offset-2 columns">
    <div class="panel form-panel">
      <div class="row collapse">
        <div class="small-12 medium-12 large-12 columns text-center">
          <h4><strong><%= t('.form_title') %></strong></h4>
        </div>
      </div>

      <div class="row collapse">
        <div class="small-12 medium-12 large-12 columns">
            <h6><strong><%= t('.name') %></strong></h6>
            <p><%= @unit.name %></p>
        </div>
      </div>

      <div class="row collapse">
        <div class="small-12 medium-12 large-12 columns">
            <h6><strong><%= t('.private_area') %></strong></h6>
            <p><%= @unit.private_area %></p>
        </div>
      </div>

      <div class="row collapse">
        <div class="small-12 medium-12 large-12 columns">
            <h6><strong><%= t('.common_area') %></strong></h6>
            <p><%= @unit.common_area %></p>
        </div>
      </div>

      <div class="row collapse">
        <div class="small-12 medium-12 large-12 columns">
            <h6><strong><%= t('.box_area') %></strong></h6>
            <p><%= @unit.box_area %></p>
        </div>
      </div>

      <div class="row collapse">
        <div class="small-12 medium-12 large-12 columns">
            <h6><strong><%= t('.exchanged') %></strong></h6>
            <p><%= if @unit.exchanged then t('.exchanged_yes') else t('.exchanged_no') end %></p>
        </div>
      </div>

      <div class="row collapse">
        <div class="small-12 medium-12 large-12 columns">
          <%= link_to(edit_user_project_unit_path(current_user, @project, @unit), class: 'button expand edit-project-button') do %>
            <%= icon 'pencil' %>
            <%= t('.edit_button') %>
          <% end %> 
        </div>
      </div>      
    </div>
  </div>
</div>

